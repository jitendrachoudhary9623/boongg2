<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="13dp"
    android:background="@color/white"
>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/textView_1"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_margin="8dp"

            android:textSize="12sp"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:id="@+id/rent_inventory_all_bike_name"
            android:text="Bike Name"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:theme="@style/textView_1"
            android:id="@+id/rent_inventory_all_qty"
            android:background="@color/grayShade1"
            android:layout_margin="8dp"
            android:padding="5dp"

            android:textSize="12sp"
            android:text="Quantity"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">


            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:theme="@style/textView_1"
                android:id="@+id/rent_inventory_all_engine"
                android:background="@color/grayShade1"
                android:layout_margin="8dp"
                android:padding="5dp"
                android:textSize="12sp"
                android:text="Engine Capacity"/>
        </LinearLayout>


        <TextView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/textView_1"
            android:id="@+id/rent_inventory_all_status"
            android:textColor="@color/blue"
            android:text="Status"/>

<TextView
    android:id="@+id/rent_inventory_all_button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:theme="@style/textView_1"
    android:padding="3dp"
    android:layout_weight="1"
    android:background="@color/green_pay"
    android:textColor="@color/white"
    android:text="Price Chart"/>
    </LinearLayout>
</android.support.v7.widget.CardView>