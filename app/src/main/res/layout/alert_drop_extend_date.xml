<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_cards"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Extend Date"
              android:theme="@style/dialog_header"
                android:padding="10dp"
                />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/alert_drop_extend_date_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/timepicker_textview"
            android:datePickerMode="calendar"
           android:background="@color/light_gray"
            android:drawableLeft="@drawable/textview_calendar"
            android:text="Extension Date"
            />

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_margin="10dp"
            android:padding="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculate Rent"
            android:id="@+id/alert_drop_extend_calculate_rent"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calculated Rent is 3500"
                android:layout_gravity="center_vertical|center_horizontal"
                android:textStyle="bold"
                android:background="@color/light_gray"
                android:padding="8dp"
                android:layout_margin="10dp"
                android:id="@+id/alert_drop_extend_date_rent_calculate"
               />
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_margin="15dp"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Extend Date"
                android:background="@color/green_pay"
                android:textAlignment="center"
                android:id="@+id/alert_drop_extend_date_api_call"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>