<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayShade1"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_margin="5dp">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_margin="15dp"
                android:id="@+id/screen1"
                android:visibility="visible"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"

                        android:id="@+id/add_bike_model"/>
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_margin="5dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/add_bike_brand"/>

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"

                        android:id="@+id/add_bike_model_year"/>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/rounded"
                        android:paddingTop="1dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="3dp">
                        <EditText android:id="@+id/add_bike_color"
                            android:padding="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:layout_marginBottom="2dp"
                            android:hint="Enter Bike Color" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>


            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_margin="5dp"
                android:id="@+id/screen2"
                android:visibility="invisible"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
android:layout_marginLeft="5dp"
android:layout_marginRight="5dp"
                        android:background="@drawable/rounded"
                        android:paddingTop="1dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="3dp">
                        <EditText android:id="@+id/add_bike_engine_capacity"
                            android:padding="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:layout_marginBottom="2dp"
                            android:hint="Enter Engine Capacity" />
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
android:layout_marginLeft="5dp"
android:layout_marginRight="5dp"
                        android:background="@drawable/rounded"
                        android:paddingTop="1dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="3dp">
                        <EditText android:id="@+id/add_bike_chassis_number"
                            android:padding="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:layout_marginBottom="2dp"
                            android:hint="Enter Chasis Number" />
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
android:layout_marginLeft="5dp"
android:layout_marginRight="5dp"
                        android:background="@drawable/rounded"
                        android:paddingTop="1dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="3dp">
                        <EditText android:id="@+id/add_bike_engine_number"
                            android:padding="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:layout_marginBottom="2dp"
                            android:hint="Enter Engine Number" />
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
android:layout_marginLeft="5dp"
android:layout_marginRight="5dp"
                        android:background="@drawable/rounded"
                        android:paddingTop="1dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="3dp">
                        <EditText android:id="@+id/add_bike_registration"
                            android:padding="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:layout_marginBottom="2dp"
                            android:hint="Enter Registration Number" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>


            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_margin="5dp"
                android:id="@+id/screen3"
                android:visibility="invisible"

                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
android:layout_marginLeft="5dp"
android:layout_marginRight="5dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded"
                        android:paddingTop="1dp">

                        <EditText
                            android:id="@+id/add_bike_owner_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:hint="Enter Owner Number"
                            android:inputType="text"
                            android:padding="6dp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
android:layout_marginLeft="5dp"
android:layout_marginRight="5dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded"
                        android:paddingTop="1dp">

                        <EditText
                            android:id="@+id/add_bike_owner_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:hint="Enter Email Address"
                            android:inputType="textEmailAddress"
                            android:padding="6dp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
android:layout_marginLeft="5dp"
android:layout_marginRight="5dp"
                        android:layout_marginBottom="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/rounded"
                        android:paddingTop="1dp">

                        <EditText
                            android:id="@+id/add_bike_owner_contact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:hint="Enter Contact Number"
                            android:inputType="phone"
                            android:padding="6dp" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>


            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_margin="5dp"
                android:id="@+id/screen4"
                android:visibility="gone"

                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
android:layout_marginLeft="5dp"
android:layout_marginRight="5dp"
                        android:background="@drawable/rounded"
                        android:paddingTop="1dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="3dp">
                        <EditText android:id="@+id/add_bike_purchase_cost"
                            android:padding="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberSigned"
                            android:layout_marginBottom="2dp"
                            android:hint="Enter Purchase Cost" />
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
android:layout_marginLeft="5dp"
android:layout_marginRight="5dp"
                        android:background="@drawable/rounded"
                        android:paddingTop="1dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="3dp">
                        <EditText android:id="@+id/add_bike_sell_cost"
                            android:padding="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberSigned"
                            android:layout_marginBottom="2dp"
                            android:hint="Enter Selling Price" />
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
android:layout_marginLeft="5dp"
android:layout_marginRight="5dp"
                        android:background="@drawable/rounded"
                        android:paddingTop="1dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="3dp">
                        <EditText android:id="@+id/add_bike_km_travelled"
                            android:padding="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:layout_marginBottom="2dp"
                            android:hint="Enter Km Travelled" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>


            </android.support.v7.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/add_bike_previous"
                android:text="Previous"
                android:visibility="visible"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_margin="8dp"
                android:background="@color/colorAccent"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textStyle="bold"/>
            <TextView
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/add_bike_next"
                android:text="Next"
                android:padding="10dp"
                android:layout_margin="8dp"
                android:background="@color/green_pay"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_weight="1"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_margin="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/blue"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:id="@+id/add_bike_button_2"
            android:visibility="visible"
            android:text="Add Bike" />

    </LinearLayout>

</ScrollView>