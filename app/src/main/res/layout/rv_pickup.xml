<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="10dp"
    app:cardCornerRadius="2dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_weight="2.6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/rv_booking_id"
                android:textColor="@color/white"
                android:text="BOOKING ID"
                android:layout_gravity="center_horizontal|center_vertical"

                android:textStyle="bold"
                android:padding="5dp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                />
            <TextView
                android:id="@+id/rv_start_date"
                android:textAlignment="textEnd"
                android:text="Start Date"
                android:textSize="10sp"
                android:textStyle="bold"
                android:padding="2dp"
                android:layout_gravity="center_horizontal|center_vertical"

                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                 />
            <TextView
                android:id="@+id/rv_end_date"
                android:text="END DATE"
                android:textSize="10sp"
                android:layout_gravity="center_horizontal|center_vertical"

                android:textStyle="bold"
                android:padding="2dp"
                android:paddingLeft="5dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/rv_customer_name"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_height="match_parent"
                    android:text="Customer Name"/>
                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:gravity="center_horizontal|center_vertical"

                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:id="@+id/rv_amount"
                    android:text="Amount"/>
            </LinearLayout>
            <View android:layout_height="0.8dp"
                android:layout_width="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"/>
            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/call_user"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="15dp"
                    android:id="@+id/rv_vehicle"
                    android:text="Vehicle"/>
                <TextView
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="15dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:id="@+id/rv_online"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:textAlignment="center"
                    android:background="#00bfff"
                    android:visibility="gone"
                    android:text="Online"/>

                <TextView
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:id="@+id/rv_mode"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Mode"
                    android:textStyle="bold"
                    android:textColor="@color/green_pay"
                    android:layout_margin="5dp"
                    android:padding="3dp"
                    android:textAlignment="center"
                    android:gravity="center_horizontal|center_vertical" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rv_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_weight="1"
                    android:gravity="start|center_vertical"
                    android:paddingLeft="15dp"
                    android:text="Phone No"
                    android:drawableLeft="@drawable/textview_call"

                    android:textAlignment="textStart" />


            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <TextView
                android:textAlignment="center"
                android:textStyle="bold"

                android:layout_margin="10dp"
                android:padding="5dp"
                android:id="@+id/rv_cancel_in_button"
                android:layout_weight="1"
                android:background="@android:color/holo_red_dark"
                android:textColor="@color/white"
                android:text="CANCEL"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/rv_check_in_button"
                android:layout_weight="1"
                android:background="@color/green_pay"
                android:textColor="@color/white"
                android:text="CHECK-IN"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
</LinearLayout>