<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_margin="5dp"
    android:background="@color/white"
    >
  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textAlignment="center"
      android:background="@color/colorPrimary"
      android:textColor="@color/white"
      android:textStyle="bold"
      android:padding="3dp"
      android:id="@+id/all_inventory_vehicle_name"
      android:text="Vehicle Name"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:padding="3dp"
            android:id="@+id/all_inventory_registration_no"

            android:layout_weight="1"
            android:text="Registration No : "/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:padding="3dp"
            android:background="@color/green_pay"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:id="@+id/all_inventory_status"

            android:text="Status"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:padding="3dp"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:id="@+id/all_inventory_rc"
            android:background="@color/grayShade1"
            android:text="RC  	&#10004; "/>
        <TextView
            android:layout_margin="3dp"
            android:id="@+id/all_inventory_puc"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:padding="3dp"
            android:layout_weight="1"
            android:background="@color/grayShade1"
            android:text="PUC  	&#10004; "/>
        <TextView
            android:layout_margin="3dp"
            android:background="@color/grayShade1"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:padding="3dp"
            android:layout_weight="1"

            android:id="@+id/all_inventory_insuarance"

            android:text="Insurance  	&#10004; "/>

    </LinearLayout>

</LinearLayout>