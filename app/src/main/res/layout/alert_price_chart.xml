<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/rounded_cards"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Price Chart"
        android:theme="@style/dialog_header"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grayShade1"/>
    <CheckBox
        android:layout_margin="5dp"
        android:id="@+id/price_chart_admin_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tick to Apply Admin Decided Rent Values"/>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:padding="7dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/left_bar"
                    android:orientation="vertical">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded"
                        android:paddingTop="1dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="2dp"
android:layout_marginTop="2dp">
                        <EditText android:id="@+id/price_chart_hourly"
                            android:padding="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:layout_marginBottom="2dp"
                            android:hint="Hourly Rate" />
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        
                        android:background="@drawable/rounded"
                        android:paddingTop="1dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp">
                        <EditText android:id="@+id/price_chart_2_day"
                            android:padding="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:layout_marginBottom="2dp"
                            android:hint="2 Day Rate" />
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        
                        android:background="@drawable/rounded"
                        android:paddingTop="1dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="2dp"
android:layout_marginTop="2dp">
                        <EditText android:id="@+id/price_chart_4_day"
                            android:padding="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:layout_marginBottom="2dp"
                            android:hint="4 Day Rate" />
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        
                        android:background="@drawable/rounded"
                        android:paddingTop="1dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="2dp"
android:layout_marginTop="2dp">
                        <EditText android:id="@+id/price_chart_6_day"
                            android:padding="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:layout_marginBottom="2dp"
                            android:hint="6 Day Rate" />
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        
                        android:background="@drawable/rounded"
                        android:paddingTop="1dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="2dp"
android:layout_marginTop="2dp">
                        <EditText android:id="@+id/price_chart_weekend"
                            android:padding="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:layout_marginBottom="2dp"
                            android:hint="Weekend Rate" />
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        
                        android:background="@drawable/rounded"
                        android:paddingTop="1dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="2dp"
android:layout_marginTop="2dp">
                        <EditText android:id="@+id/price_chart_15_day"
                            android:padding="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:layout_marginBottom="2dp"
                            android:hint="15 Day Rate" />
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        
                        android:background="@drawable/rounded"
                        android:paddingTop="1dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="2dp"
android:layout_marginTop="2dp">
                        <EditText android:id="@+id/price_chart_monthly"
                            android:padding="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:layout_marginBottom="2dp"
                            android:hint="Monthly Rate" />
                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/right_bar"

                    android:orientation="vertical">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        
                        android:background="@drawable/rounded"
                        android:paddingTop="1dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="2dp"
android:layout_marginTop="2dp">
                        <EditText android:id="@+id/price_chart_1_day"
                            android:padding="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:layout_marginBottom="2dp"
                            android:hint="1 Day Rate" />
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        
                        android:background="@drawable/rounded"
                        android:paddingTop="1dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="2dp"
android:layout_marginTop="2dp">
                        <EditText android:id="@+id/price_chart_3_day"
                            android:padding="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:layout_marginBottom="2dp"
                            android:hint="3 Day Rate" />
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        
                        android:background="@drawable/rounded"
                        android:paddingTop="1dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="2dp"
android:layout_marginTop="2dp">
                        <EditText android:id="@+id/price_chart_5_day"
                            android:padding="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:layout_marginBottom="2dp"
                            android:hint="5 Day Rate" />
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        
                        android:background="@drawable/rounded"
                        android:paddingTop="1dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="2dp"
android:layout_marginTop="2dp">
                        <EditText android:id="@+id/price_chart_7_day"
                            android:padding="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:layout_marginBottom="2dp"
                            android:hint="7 Day Rate" />
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        
                        android:background="@drawable/rounded"
                        android:paddingTop="1dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="2dp"
android:layout_marginTop="2dp">
                        <EditText android:id="@+id/price_chart_10_day"
                            android:padding="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:layout_marginBottom="2dp"
                            android:hint="10 Day Rate" />
                    </android.support.design.widget.TextInputLayout>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        
                        android:background="@drawable/rounded"
                        android:paddingTop="1dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="2dp">
                        <EditText android:id="@+id/price_chart_20_day"
                            android:padding="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:layout_marginBottom="2dp"
                            android:hint="20 Day Rate" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:background="@drawable/rounded"
                        android:paddingTop="1dp"
                        android:layout_weight="1"
                        android:layout_marginBottom="2dp">
                        <EditText android:id="@+id/price_chart_weekday"
                            android:padding="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:layout_marginBottom="2dp"
                            android:hint="20 Day Rate" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.6dp"
                android:layout_margin="8dp"
                android:background="@color/grayShade1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bottom_bar"
                android:orientation="vertical">
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded"
                    android:paddingTop="1dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp">
                    <EditText android:id="@+id/price_chart_kms_limit"
                        android:padding="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:layout_marginBottom="2dp"
                        android:hint="KMS Limit" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded"
                    android:paddingTop="1dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp">
                    <EditText android:id="@+id/price_chart_extra_kms"
                        android:padding="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:layout_marginBottom="2dp"
                        android:hint="Extra KMs" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded"
                    android:paddingTop="1dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp">
                    <EditText android:id="@+id/price_chart_extra_hrs"
                        android:padding="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:layout_marginBottom="2dp"
                        android:hint="Extra HRs" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>



        </LinearLayout>
    </ScrollView>
</LinearLayout>